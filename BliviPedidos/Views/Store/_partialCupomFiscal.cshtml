@model Pedido

<!DOCTYPE html>
<html>
<head>
    <title>Cupom Fiscal</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .cupom {
            border: 1px solid #000;
            padding: 10px;
            width: 60%; /* Aumentando a largura para 60% */
            margin: 0 auto; /* Centraliza o cupom na página */
        }

        .cabecalho {
            text-align: center;
            margin-bottom: 10px;
        }

        .itens {
            margin-bottom: 10px;
        }

        .item {
            margin-bottom: 5px;
        }

        .subtotal {
            margin-top: 10px;
            text-align: right;
            font-weight: bold;
        }

        .rodape {
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="cupom">
        <div style="text-align: center;" class="cabecalho">
            <h1>Cupom Fiscal</h1>
            <p>Data: @DateTime.Now.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="itens">
            @foreach (var i in Model.Itens)
            {
                <div class="item">
                    <span>@i.Quantidade X </span>
                    <span>@i.Produto.Nome</span>
                    <span style="float: right;">@string.Format("{0:0.00}", i.PrecoUnitario)</span>
                </div>
            }
        </div>
        &nbsp;
        <div class="subtotal">
            <span style="float: right;">Subtotal: R$ @string.Format("{0:0.00}", Model.Itens.Sum(i => i.Subtotal))</span>
        </div>
        <div style="text-align: center;" class="rodape">
            <p>Obrigado pela preferência!</p>
        </div>
    </div>
    <div style="text-align: center; margin-top: 20px;">
        <button onclick="abrirPopup()" class="btn btn-primary">Visualizar Cupom</button>
    </div>
    <script src="~/js/controllers/Store-Cupom.js"></script>
</body>
</html>
