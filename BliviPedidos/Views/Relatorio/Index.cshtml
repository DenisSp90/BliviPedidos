@{
    ViewData["Title"] = "Relatórios de Produtos";
}

@model BliviPedidos.Models.ViewModels.RelatorioViewModel;

<div class="pagetitle">
    <h1>Relatórios de Produtos</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Página de Inicial</a></li>
            <li class="breadcrumb-item">Relatórios</li>
            <li class="breadcrumb-item active">Produtos</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <a href="javascript:void(0)" class="box has-text-centered" data-bs-toggle="modal" data-bs-target="#produtosEmEstoqueModal">
                        <div class="card info-card sales-card">
                            <div class="card-body">
                                <h5 class="card-title">Tabela<span> | Tabela de produtos no estoque</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-table"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6></h6>
                                        <span class="small pt-1 fw-bold">Gerar impressão do documento</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>

                    @Html.Partial("_ModalProdutosEmEstoque")
                </div>

                <div class="col-lg-4 col-md-6">
                    <a href="javascript:void(0)" class="box has-text-centered" data-bs-toggle="modal" data-bs-target="#produtosMovimetacaoGeralModal">
                        <div class="card info-card sales-card">
                            <div class="card-body">
                                <h5 class="card-title">Movimentação<span> | Registrados no estoque</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="ri-exchange-funds-line"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6></h6>
                                        <span class="small pt-1 fw-bold">Gerar impressão do documento</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>

                    @Html.Partial("_ModalProdutosMovimentacaoGeral")
                </div>

                <div class="col-lg-4 col-md-6">
                    <a href="javascript:void(0)" class="box has-text-centered" data-bs-toggle="modal" data-bs-target="#produtosByQuantidadeModal">
                        <div class="card info-card sales-card">
                            <div class="card-body">
                                <h5 class="card-title">Reposição<span> | Consultar quantidades</span></h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="ri-repeat-one-line"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6></h6>
                                        <span class="small pt-1 fw-bold">Gerar impressão do documento</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>

                    @Html.Partial("_ModalProdutosByQuantidade")
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Consulte a movimentação do estoque</h5>
                    <table class="table datatable" style="font-size: 12px;">
                        <thead>
                            <tr>
                                <th scope="col">Data</th>
                                <th scope="col">Produto</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Quantidade</th>
                                <th scope="col">Observação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.Movimentacoes)
                            {
                                <tr>
                                    <th scope="row">@m.Data</th>
                                    <td>@m.Produto.Nome.Trim()</td>

                                    <td>
                                        @if (m.Tipo == "Entrada")
                                        {
                                            <span class="badge bg-success"><i class="bi bi-arrow-down-short me-1"></i> Entrada</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="bi bi-arrow-up-short"></i> Saida</span>
                                        }
                                    </td>

                                    <td>@m.Quantidade</td>
                                    <td>@m.Observacao.Trim()</td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>
                <div class="card-footer">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-house"></i> Voltar ao início
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>
